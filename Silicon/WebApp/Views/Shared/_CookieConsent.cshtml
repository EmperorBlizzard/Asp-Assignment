@if (Context.Request.Cookies["consent"] == null)
{
    <div id="cookie-consent" class="alert alert-gray fixed-bootom">
        <dív class="container">
            <span>This website uses cookies to improve the user experience</span>
            <button onclick="acceptCookies()" class="btn btn-theme">Ok</button>
        </dív>
    </div>

    <script>
        function acceptCookies() {
            try {
                document.querySelector('#cookie-consent').style.display = 'none'

                fetch(`/sitesettings/consent`, {
                    method: 'post',
                    headers: {
                        'X-Requested-With': 'XmlHttpRequest'
                    }
                })
            }
            catch { }
        }
    </script>
}