@model SignInForm

@{
    ViewData["Title"] = "Sign In";
}

<section class="sign-in">
    <div class="container">
        <div class="text">
            <h1>Welcome Back</h1>
            <span class="dont-have-an-account">Don’t have an account yet? <a asp-action="SignUp" asp-controller="Auth">Sign up here.</a></span>
        </div>

        <form class="signin-form" method="post" asp-action="SignIn" asp-controller="Auth">

            <div class="alert">
                @ViewData["StatusMessage"]
            </div>

            <div class="form-email input-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" />
            </div>

            <div class="form-password input-group">
                <label asp-for="Password"></label>
                <input id="Password" asp-for="Password" />
            </div>

            <div class="form-remember checkbox-group">
                <div class="input-group">
                    <input asp-for="RememberMe" />
                    <label asp-for="RememberMe"></label>
                </div>
            </div>

            <button class="btn btn-theme" type="submit">Sign In</button>
        </form>
    </div>
</section>